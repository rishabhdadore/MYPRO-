@model MYPRODUCTPRO.Models.CreateEmployeeViewModel
@{
    Layout = "~/Views/Shared/_MainPage.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Correct Bootstrap & jQuery Versions -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
	<link href="~/styles/custom.css" rel="stylesheet" />
    <style>
        #profileImages {
            width: 200px; /* Set equal width and height for a circular shape */
            height: 200px;
            border-radius: 50%; /* Makes the image circular */
            object-fit: contain; /* Ensures the whole image fits without cropping */
        }

    </style>
</head>

<body class="container" style="overflow-x: hidden; height: 100%;">
    <div class="container bootstrap snippet" style="height: 100%;">

        <form asp-action="CreateEmp" asp-controller="Employee" method="post" enctype="multipart/form-data">
            <!-- Title & Logo (Right Aligned) -->
            <div class="row align-items-start">
                <!-- Left Side - Profile Picture -->
                <div class="col-sm-12 col-md-3 text-center">
                    <img id="profileImages" src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail rounded-circle" alt="avatar">
                    <h6>Upload a different photo...</h6>
                    <input asp-for="ProfilePicture" class="form-control" type="file" id="profilePictureInput" accept="image/*" />
                </div>


                <!-- Right Side - Input Fields -->
                <div class="col-sm-12 col-md-9">
                    <div class="col-sm-12 d-flex align-items-center justify-content-center">
                        <h1 class="mb-0 mr-3">CREATE EMPLOYEES ID</h1>
                        <img src="~/img/logo-removebg-preview (1).png" width="180px" />
                    </div>
                    @{
                        if (TempData["SuccessMessage"] != null)
                        {
                           @TempData["SuccessMessage"]
                                }
                    }

                    @{
                        if (TempData["ErrorMessage"] != null)
                        {
                            @TempData["ErrorMessage"]
                        }
                    }

                    @{
                        if (TempData["rMessage"] != null)
                        {
                            <div class="alert alert-danger">
                                @TempData["rMessage"]
                            </div>
                        }
                    }

                    <hr />

                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="FirstName"><h4>First name</h4></label>
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="First name">
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Email"><h4>Email</h4></label>
                            <input asp-for="Email" class="form-control" placeholder="Email">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Mobile"><h4>Mobile</h4></label>
                            <input asp-for="Mobile" type="text" class="form-control" placeholder="Enter Mobile Number">
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Location"><h4>Location</h4></label>
                            <input asp-for="Location" class="form-control" placeholder="Enter a location">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Password"><h4>Password</h4></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                        </div>

                        <div class="col-md-6">
                            <label asp-for="ConfirmPassword"><h4>Verify</h4></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label><h4>Role</h4></label><br>
                            <label class="radio-inline">
                                <input type="radio" asp-for="Role" name="role" value="manager" checked> Manager
                            </label>
                            <label class="radio-inline">
                                <input type="radio" asp-for="Role" name="role" value="employee"> Employee
                            </label>
                        </div>

                        <div class="col-md-6">
                            <label><h4>Active Status</h4></label><br>
                            <label class="radio-inline">
                                <input type="radio" asp-for="Status" name="status" value="active" checked> Active
                            </label>
                            <label class="radio-inline">
                                <input type="radio" asp-for="Status" name="status" value="inactive"> Inactive
                            </label>

                        </div>
                    </div>

                    <div class="form-group   text-right ">
                        <button class="btn btn-lg btn-success" type="submit">

                            <i class="glyphicon glyphicon-ok-sign"></i> Save And Add
                        </button>

                        <button class="btn btn-lg btn-success" asp-action="" type="submit">

                            <i class="glyphicon glyphicon-ok-sign"></i> Save
                        </button>


                    </div>
                </div>
            </div>
        </form>

    </div>
</body>
</html>
