<script>
    $(document).ready(function () {
        $("#profilePictureInput").change(function (event) {
            var reader = new FileReader();
            reader.onload = function () {
                $("#profileImages").attr("src", reader.result);
            };
            reader.readAsDataURL(event.target.files[0]);
        });
    });
</script>
